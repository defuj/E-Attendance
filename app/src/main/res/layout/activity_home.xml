<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <id.co.bigtek.attendance.adapter.NonSwipeableViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:itemIconTint="@drawable/tab_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_bottom_nav"
            app:elevation="6dp"
            app:itemTextColor="@drawable/tab_selector"
            app:itemTextAppearanceActive="@style/NavigationBottom"
            app:itemTextAppearanceInactive="@style/NavigationBottom"
            app:itemIconSize="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>